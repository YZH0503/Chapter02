#include <iostream>

using namespace std;

int main()
{
    double r,d,c,s;
    double pi=3.14159;
    cin>>r;
    d=2*r;
    c=2*pi*r;
    s=pi*r*r;
    cout<<"直径："<<d<<endl;
    cout<<"周长："<<c<<endl;
    cout<<"面积："<<s<<endl;
    return 0;
}
